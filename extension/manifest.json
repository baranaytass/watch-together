{
  "manifest_version": 3,
  "name": "Watch Together",
  "version": "1.0.0",
  "description": "Watch videos synchronously with friends",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.vimeo.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.vimeo.com/*"
      ],
      "js": ["content/content.js"]
    }
  ]
}
